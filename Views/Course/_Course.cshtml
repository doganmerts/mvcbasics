@model Course
<div id="kurs_@Model.Id" class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        src="~/img/@Model.Image"
        alt=""
        width="200"
        class="img-fluid-rounded-start"
      />
    </div>
    <div class="col-md-8">
      <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id">
    
      <h1 class="card-title">@Model.Title</h1>
    </a>
      <p class="card-text">@Model.Description</p>
    </div>
  </div>
</div>
